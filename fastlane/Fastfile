default_platform(:ios)

platform :ios do
  desc "Setup code signing with match"
  lane :setup_signing do
    if ENV["CI"]
      # Create temporary keychain for CI
      create_keychain(
        name: "fastlane_keychain",
        password: ENV["MATCH_KEYCHAIN_PASSWORD"] || "temp_password",
        default_keychain: true,
        unlock: true,
        timeout: 3600,
        lock_when_sleeps: false
      )
    end

    match(
      type: "appstore",
      readonly: ENV["CI"] == "true",
      git_url: ENV["CI"] ? "https://github.com/shepting/certificates" : nil,  # Use HTTPS in CI, SSH locally
      keychain_name: ENV["CI"] ? "fastlane_keychain" : nil,
      keychain_password: ENV["CI"] ? (ENV["MATCH_KEYCHAIN_PASSWORD"] || "temp_password") : nil
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    setup_signing
    gym(
      scheme: "Fathom",
      export_method: "app-store"
    )
    upload_to_testflight(
      username: ENV["PERSONAL_APPLE_ID"],
      team_id: ENV["PERSONAL_FASTLANE_ITC_TEAM_ID"],
      skip_waiting_for_build_processing: true
    )
  end

  desc "Build and upload to App Store"
  lane :release do
    setup_signing
    gym(
      scheme: "Fathom",
      export_method: "app-store"
    )
    upload_to_app_store(
      username: ENV["PERSONAL_APPLE_ID"],
      team_id: ENV["PERSONAL_FASTLANE_ITC_TEAM_ID"],
      skip_screenshots: true,
      skip_metadata: true,
      precheck_include_in_app_purchases: false,
      run_precheck_before_submit: false
    )
  end

  desc "Build only (no upload)"
  lane :build do
    setup_signing
    gym(
      scheme: "Fathom",
      export_method: "app-store"
    )
  end
end
